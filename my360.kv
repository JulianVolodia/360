#:kivy 1.0
<Label>:

    font_name:'Montserrat-SemiBold.ttf'
    markup: True

<BackgroundTemplate>:
    canvas:
        Color:
            rgb:(.27,.27,.30)
        Rectangle:
            pos:self.pos
            size:self.size
        Color:
            rgb: (1,1,1)
    Label:

        text: '360[color=f16a4c]*[/color]'
        font_size: 30
        pos: -5, root.height - 75



<Player>:
    canvas:
        Ellipse:
            texture: self.texture
            pos: self.pos
            size: self.diameter, self.diameter





<Enemy>:
    canvas:
        Ellipse:
            texture: self.texture
            pos: self.pos
            size: self.diameter, self.diameter


<GameScreen>:

    BackgroundTemplate
    Label:
        text: 'score ' + root.game_score
        pos:   self.width*0.3, 0.46*self.height
        font_size: 25


<GameOverScreen>:
    BackgroundTemplate

    Label:
        text: 'game over'
        pos: self.pos[0], 270
        font_size: 40

    Label:
        text: 'score                  '+str(root.game_score)
        font_size: 20
        pos: self.pos[0], 200
    Label:
        text: 'highscore         '+root.highscore

        font_size: 20
        pos: self.pos[0], 165

<MenuScreen>:
    BackgroundTemplate



<HtpScreen>:
    BackgroundTemplate


    Label:
        text: 'To [color=f16a4c]change direction[/color] of your circle,\nsimply tap on the right side of screen\n\nThe game ends, when you hit \nthe grey circle.\n\nTo [color=f16a4c]change circle[/color] tap on the left side\nof screen,when you are close to\nthe next circle \n\nMake full laps on all circles, \nand avoid grey circles'
        pos: 10,  100
        font_size: 18

    Label:
        text: "[color=7f7f7f]how to play[/color]"
        pos: root.width*0.65, 0.89*root.height
        font_size: 20

